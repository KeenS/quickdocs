<header>
  <h2 class="project-name"><a href="/project/<% @var name -escape uri %>"><% @var name %></a></h2>
  <span class="subtitle ql-version"><% @var ql-version %></span>
  <% @include header-links.tmpl %>
</header>

<% @if readme %>
<section class="readme">
  <div class="readme-body"><% @var readme -escape raw %></div>
</section>
<% @endif %>

<% (when (or (getf env :authors)
             (getf env :maintainers)
             (getf env :licenses)) %>
<section class="information">
  <dl>
    <% @if authors %>
    <dt>Author</dt>
    <dd><% @with authors %><% @include _list-comma %><% @endwith %></dd>
    <% @endif %>
    <% @if maintainers %>
    <dt>Maintainer</dt>
    <dd><% @with maintainers %><% @include _list-comma %><% @endwith %></dd>
    <% @endif %>
    <% @if licenses %>
    <dt>Licenses</dt>
    <dd><% @with licenses %><% @include _list-comma %><% @endwith %></dd>
    <% @endif %>
  </dl>
</section>
<% ) %>

<section>
<h3>Dependencies</h3>

<% @if dependencies %>
<ul>
  <% @loop dependencies %>
  <li><a href="/project/<%= (emb::escape-for-xml env) %>"><%= (emb::escape-for-xml env) %></a></li>
  <% @endloop %>
</ul>
<% @else %>
<em>None.</em>
<% @endif %>
</section>

<section class="links">
<h3>Links</h3>
<ul>
  <li><a href="/project/<% @var name -escape uri %>/api">API Reference</a></li>
  <% @if homepage %>
  <li><a href="<% @var homepage %>">Website</a></li>
  <% @endif %>
  <% @if project-url %>
  <li><a href="<% @var project-url %>">Source Code</a></li>
  <% @endif %>
</ul>
</section>
